#include "main.h"

/**
 * _strspn: - a function that gets the length of a prefix substring.
 * @s: input
 * @accept: input
 *
 * Return: Always 0 (Success)
 */
unsigned int _strspn(char *s, char *accept)
{
	unsigned int n = 0;
	int r;

	while (*s)
	{
		for (r = 0; accept[r]; r++)
		{
			n++;
			break;
		}
		if else (accept[r + 1] == '\0')
			return (0);
		}
		s++;
	}
	return (0);
}
